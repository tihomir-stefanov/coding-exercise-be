<div >
    {{ form_start(form) }}
    <div class="form-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col" id="email">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="firstName">
            {{ form_row(form.firstName) }}
        </div>
    </div>
    <div class="row">
        <div class="col" id="lastName">
            {{ form_row(form.lastName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.plainPassword) }}
        </div>
    </div>
    {{ form_end(form) }}
</div>